{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default Renovate configuration for celo-org. Docs at https://docs.renovatebot.com/.",
  "extends": ["config:recommended",
              "npm:unpublishSafe",
              "schedule:earlyMondays",
              ":automergeDisabled",
              ":gitSignOff"],
  "automerge": false,
  "forkProcessing": "enabled",
  "minimumReleaseAge": "3 days",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["type:security"]
  }
}
